<div class="container">
	
	<div class="row">
		<div class="col">
			<h1>Book List of <%= @category.name  %> Category</h1>
		</div>
	</div>
	<% unless @category.books.present? %>
		<div class="row mt-5">
			<div class="col mt-5">
				<h3>No Book Found of <%= @category.name  %> Category</h3>

				<%= link_to "Get Back", :back , class:"btn btn-outline-info" %>
			</div>
		</div>
	<% end %>
	<div class="row row-cols-3 mt-4">
		<% @books.each do |book| %>
			<div class="mt-5 mb-5">
				<%= render 'shared/books/show_book', book: book %>		
			</div>
		<% end %>
	</div>
	<%= paginate @books%>
</div>