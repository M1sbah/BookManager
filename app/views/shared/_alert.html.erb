<% if notice.present? %>
	<div class="alert alert-p alert-dismissible fade show messages">
		<strong><%= notice %></strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
<% end %>
<% if alert.present? %>
	<div class="alert alert-danger alert-dismissible fade show messages">
		<strong><%= alert %></strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
<% end %>