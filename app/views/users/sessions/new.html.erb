<div class="container mt-5">
  <div class="col-lg-6 mx-auto">  
    <div class="card mt-5">
      <div class="card-title text-center mt-5">
        <h2>Sign in</h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email , class:"form-label mx-2" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mx-2",style:"width:95%;" %>
          </div>

          <div class="field">
            <%= f.label :password, class:"form-label mx-2" %><br />
            <%= f.password_field :password, autocomplete: "current-password",class:"form-control mx-2" ,style:"width:95%;"%>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field form-check">
              <%= f.check_box :remember_me, class:"form-check-input mx-2 mt-3 mb-4" %>
              <%= f.label :remember_me,  class:"form-label mx-2 mt-3 mb-4" %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in" ,class:"btn btn-primary col-3 mx-3"%>
          </div>
        <% end %>

        <%= render "users/shared/links" %>
      </div>
  </div>
</div>