<div class="container mt-5">
  <div class="col-lg-6 mx-auto">  
    <div class="card mt-5">
      <div class="card-title text-center mt-5">
        <h2>Profile</h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email , class:"form-label mx-2" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control mx-2",style:"width:95%;" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field">
            <%= f.label :password , class:"form-label mx-2" %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "new-password" , class:"form-control mx-2",style:"width:95%;" %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation , class:"form-label mx-2" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control mx-2",style:"width:95%;" %>
          </div>

          <div class="field">
            <%= f.label :current_password , class:"form-label mx-2" %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password" , class:"form-control mx-2",style:"width:95%;" %>
          </div>

          <div class="actions">
            <%= f.submit "Update" ,class:"btn btn-success col-3 mt-4 mx-3" %>
          </div>
        <% end %>

        <%= link_to "Back", :back ,class:"btn btn-outline-info mx-3 mt-3"%>

        <hr class="my-4">
        <h3 class="form-label mx-2 mt-2" >Delete my account</h3>

        <div class="form-label mx-2" > <%= button_to "Delete", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?"}, method: :delete , class:"btn btn-danger" %>
        </div> 
      </div>
    </div>
  </div>
</div>
