<div class="container mt-5">
  <div class="col-lg-6 mx-auto">  
    <div class="card mt-5">
      <div class="card-title text-center mt-5">
        <h2>Sign up</h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email, class:"form-label mx-2" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control mx-2",style:"width:95%;" %>
          </div>

          <div class="field">
            <%= f.label :password ,class:"form-label mx-2" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" , class:"form-control mx-2",style:"width:95%;" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation ,class:"form-label mx-2" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control mx-2",style:"width:95%;" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up" ,class:"btn btn-success col-3 mt-4 mx-3" %>
          </div>
        <% end %>

        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
