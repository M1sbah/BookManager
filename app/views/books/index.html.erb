<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<div id="books">

  <table class="table"> 
    <thead class="table table-danger">
      <tr>
        <th>Title</th>
        <th>Price</th>
        <th colspan="2">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.price %></td>
          <td><%= link_to "Show", book %></td>
          <td><%= link_to "Edit", edit_book_path(book)  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to "New book", new_book_path %>
