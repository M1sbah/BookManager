<h1><%= heading %></h1>

<%= form_with model: @author, url: url do |form| %>

	<div class="mt-3">
		<%= form.label :name ,class:"form-control border-0"%>
		<%= form.text_field :name ,class:"form-control"%>
	</div>
	<div class="mt-3">
		<%= form.label :email ,class:"form-control border-0"%>
		<%= form.text_field :email ,class:"form-control"%>
	</div>
	<%= form.submit class:"btn btn-outline-primary mt-3" %>
	<%= link_to :back, :back , class:"btn btn-outline-info mt-3" %>
<% end %>